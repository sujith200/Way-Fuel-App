<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/left"
            android:backgroundTint="@color/primary_color"
            android:padding="13dp" />

        <TextView
            style="@style/poppins_semiBold_600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Edit Account"
            android:textColor="@color/primary_color"
            android:textSize="16sp" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/poppins_regular_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:text="Name"
                android:textColor="@color/black" />


            <EditText
                android:id="@+id/etUsername"
                style="@style/poppins_regular_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/edit_shape"
                android:hint="Name"
                android:inputType="text"
                android:maxLength="35"
                android:paddingHorizontal="10dp"
                android:paddingVertical="14dp"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="#1A1A1A"
                android:textColorHint="@color/grey_50"
                android:textSize="14sp" />


            <TextView
                style="@style/poppins_regular_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:text="Phone Number"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/etPhone"
                style="@style/poppins_regular_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/edit_shape"
                android:hint="Phone Number"
                android:inputType="number"
                android:backgroundTint="#6B6B6B"
                android:maxLength="10"
                android:paddingHorizontal="10dp"
                android:paddingVertical="14dp"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="#1A1A1A"
                android:textColorHint="@color/grey_50"
                android:textSize="14sp" />

            <TextView
                style="@style/poppins_regular_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:text="License Number"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/etLicense"
                style="@style/poppins_regular_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/edit_shape"
                android:hint="License Number"
                android:backgroundTint="#6B6B6B"
                android:inputType="number"
                android:maxLength="10"
                android:paddingHorizontal="10dp"
                android:paddingVertical="14dp"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="#1A1A1A"
                android:textColorHint="@color/grey_50"
                android:textSize="14sp" />
            <TextView
                style="@style/poppins_regular_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:text="E-Mail"
                android:textColor="@color/black" />


            <EditText
                android:id="@+id/etEmail"
                style="@style/poppins_regular_400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/edit_shape"
                android:hint="E-Mail"
                android:inputType="textEmailAddress"
                android:maxLength="35"
                android:paddingHorizontal="10dp"
                android:paddingVertical="14dp"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="#1A1A1A"
                android:textColorHint="@color/grey_50"
                android:textSize="14sp" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/submitLogin"
        style="@style/ButtonStyle_600"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:text="Update Account" />

</LinearLayout>